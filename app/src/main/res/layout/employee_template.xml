<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/Edit"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:text="Edit"
        android:textColorHighlight="#F10000"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:text="Delete"
        android:textColorHighlight="#F10000"
        app:layout_constraintStart_toEndOf="@+id/Telephone"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:text="Name"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <TextView
        android:id="@+id/Telephone"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/surname"
        app:layout_constraintStart_toEndOf="@+id/surname"
        app:layout_constraintTop_toTopOf="@+id/surname" />

    <TextView
        android:id="@+id/surname"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Name"
        app:layout_constraintStart_toEndOf="@+id/Name"
        app:layout_constraintTop_toTopOf="@+id/Name"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/AdminCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Telephone"
        app:layout_constraintTop_toBottomOf="@+id/Telephone" />
</androidx.constraintlayout.widget.ConstraintLayout>